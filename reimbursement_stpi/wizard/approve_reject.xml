<odoo>
    <data>


      <record id="reimbursement_ar_action_confirm_view" model="ir.ui.view">
            <field name="name">reimbursement.approve.reject.form</field>
            <field name="model">reimbursement.approve.reject</field>
            <field name="arch" type="xml">
                <form string="Approve/Reject?">
                    <p class="oe_grey">
                        <ul>
                            <li>Approve Button will approve all requests</li>
                            <li>Reject Button wil reject all requests</li>
                        </ul>
                    </p>
                    <footer>
                        <button string="Approve" name="reimbursement_ar_action_button" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Reject" name="reimbursement_ar_action_reject_button" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



    <act_window id="action_reimbursement_ar_action_confirm"
            multi="True"
            key2="client_action_multi" name="Approve/Reject"
                res_model="reimbursement.approve.reject" src_model="reimbursement"
            view_mode="form" target="new" view_type="form"/>
    </data>
</odoo>
