<odoo>
        <!-- ======Form View of master of Folder model====== -->
        <record id="foldermaster_form_view" model="ir.ui.view">
            <field name="name">folder.master.form</field>
            <field name="model">folder.master</field>
            <field name="arch" type="xml">
                <form string="File">
                    <sheet>
                        <group>
                            <group>

                                <field name="folder_name" required ="1"/>
                                <field name="subject"/>
                                <field name="date"/>
                                <field name="tags" widget="many2many_tags" placeholder="Tags..." options="{'color_field': 'color', 'no_create_edit': True}"/>
                                <field name="number"/>
                            </group>
                            <group>
                                <field name="write_date"/>
                                <field name="sequence"/>
                                <field name="iframe_dashboard" invisible="1"/>
                                <field name="type" widget="many2many_tags" placeholder="Type..." options="{'color_field': 'color'}"/>
                                <field name="status"/>
                            </group>
                            <field name="description" placeholder="Description"/>
                        </group>

                        <notebook>
                            <page name = "Letters" string = "Letters">
                                <field name="file_ids"/>
                            </page>
