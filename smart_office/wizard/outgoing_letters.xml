<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_outgoing_file_wizard" model="ir.ui.view">
            <field name="name">letter.outgoing</field>
            <field name="model">letter.outgoing</field>
            <field name="arch" type="xml">
                <form string="outgoing File">
                    <p class="oe_grey">
                        This will show you outgoing letters.
                    </p>
                    <footer>
                        <button string="outgoing Letters" name="show_outgoing_letter" type="object" class="btn-primary"/>
                        <button string="Subordinates outgoing Letters" name="show_outgoing_sec_letter" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="efile_outgoing_letter_action_call" model="ir.actions.act_window">
            <field name="name">Outgoing Letters</field>
            <field name="res_model">letter.outgoing</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_outgoing_file_wizard"/>
        </record>


    <menuitem id="efile_outgoing_letter_wizard_view" name="Outgoing Letters" action="smart_office.efile_outgoing_letter_action_call"
            parent="muk_dms.menu_dms_file" sequence="100"/>


    </data>
</odoo>