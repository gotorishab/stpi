<odoo>

    <record id="form_view_file_tracker_wizard" model="ir.ui.view">
        <field name="name">File Tracker</field>
        <field name="model">file.tracker.wizard</field>
        <field name="arch" type="xml">
            <form string="PF Ledger">
                <group>
                    <group>
                        <p>
                            <ul>
                                <li>Click on Confirm Button to Generate Report</li>
<!--                                <li>Click on Print Button to print Report in PDF format</li>-->
                            </ul>
                        </p>
                    </group>
                    <group>
                    </group>
                    <group>
                        <field name="report_of" required="1"/>
                        <field name="details" attrs="{'invisible':[('report_of','=', 'Both')]}"/>
                        <field name="search_through" required="1"/>
                        <field name="employee_id" attrs="{'invisible':[('search_through','!=', 'Employee')], 'required':[('search_through','=', 'Employee')]}"/>
                        <field name="branch_id" attrs="{'invisible':[('search_through','!=', 'Branch')], 'required':[('search_through','=', 'Branch')]}"/>
                        <field name="job_id" attrs="{'invisible':[('search_through','!=', 'Job')], 'required':[('search_through','=', 'Job')]}"/>
                        <field name="department_id" attrs="{'invisible':[('search_through','!=', 'Department')], 'required':[('search_through','=', 'Department')]}"/>
                    </group>
                    <group>
                        <field name="action_taken" required="1"/>
                        <field name="date_range" required="1"/>
                        <field name="from_date" readonly="1"/>
                        <field name="to_date" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm_report" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="file_report_action_wizard" model="ir.actions.act_window">
        <field name="name">File Tracker</field>
        <field name="res_model">file.tracker.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id = "file_tracking_report_id"
              name = "Reporting"
              parent="muk_dms.main_menu_muk_dms"
              action ="file_report_action_wizard"
    />

</odoo>