                                <field name = "jobposition" options="{'no_create_edit': True, 'no_create': True}" required="1"/>
                            </group>
                            <group>
                                 <field name = "employee" options="{'no_create_edit': True, 'no_create': True}" required="1"/>
                                 <field name = "user"/>
                                 <field name="defid" invisible = "1"/>
                            </group>
                        </group>
