<odoo>

    <!-- ============ Form View of forward button============= -->
        <record id="forward_button_form_view" model="ir.ui.view">
            <field name="name">file.wizard.form</field>
            <field name="model">file.wizard</field>
            <field name="arch" type="xml">
                <form string="Correspondence information">
