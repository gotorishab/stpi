<odoo>

        <record model="ir.ui.view" id="hr_salary_rule_eve_inherit">
        <field name="name">hr.salary.rule.form</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='appears_on_payslip']" position="after">
                  <field name="pf_eve_type"/>
              </xpath>
            </field>
    </record>
        <record model="ir.ui.view" id="res_company_pf_inherit">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
              <xpath expr="//notebook" position="inside">
                  <page string="PF Interest" name="pf_int">
                      <field name="pf_table">
                          <tree editable="bottom">
                              <field name="company_id" invisible="1"/>
                              <field name="from_date" required="1"/>
                              <field name="to_date" required="1"/>
                              <field name="interest_rate" required="1"/>
                              <field name="attachment"/>
                            </tree>
                        </field>
                  </page>
              </xpath>
            </field>
    </record>



</odoo>
