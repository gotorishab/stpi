<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form_inherit_front" model="ir.ui.view">
        <field name="name">res.users.view.form.front.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <page name="access_rights" position="after">
                <page name="basic_details" string="Basic Details">
                    <group>
                        <group>
                            <field name="unit_id"/>
                    <field name="department_id"/>
                        </group>
                    </group>

                </page>
            </page>
        </field>
    </record>
    <record id="res_company_view_form_inherit_word" model="ir.ui.view">
        <field name="name">res.company.view.form.front.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <page name="general_info" position="after">
                <page name="basic_details" string="Basic Details">
                    <group>
                        <group>
                            <field name="enable_idea_post"/>
                    <field name="max_word_limit_idea"/>
                        </group>
                    </group>

                </page>
            </page>
        </field>
    </record>
</odoo>