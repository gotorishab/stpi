<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="blog_post_view_form_inherit_front" model="ir.ui.view">
        <field name="name">blog.post.view.form.front.inherit</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <group name="blog_details" position="before">
              <field name="image" widget="image" class="oe_avatar" nolable="1" options="{'size': [100, 100]}"/>
            </group>
            <group name="publishing_details" position="before">
                <field name="vote_ids" attrs="{'invisible':[('front_type', '!=', 'story')]}">
                  <tree editable="bottom">
                    <field name="vote"/>
                    <field name="blog_blog_id"/>
                  </tree>
                </field>
                <group>
                    <field name="user_vote" attrs="{'invisible':[('front_type', '!=', 'story')]}"/>
                <field name="vote_count" attrs="{'invisible':[('front_type', '!=', 'story')]}"/>
                </group>
            </group>
            <field name="subtitle" position="after">
                <field name="front_type"/>
                <field name="date_from" attrs="{'invisible':[('front_type', '!=', 'calendar_1')],'required':[('front_type', '=', 'calendar_1')]}"/>
                <field name="date_to" attrs="{'invisible':[('front_type', '!=', 'calendar_1')],'required':[('front_type', '=', 'calendar_1')]}"/>
            </field>
            <xpath expr="//sheet" position="before">
            <header>
                <button name="button_publish" string="Publish" type="object" groups="intranet_home.group_intranet_home_content_moderator"/>
                <button name="button_unpublish" string="Unpublish" type="object" groups="intranet_home.group_intranet_home_content_moderator"/>
            </header>
            </xpath>
        </field>
    </record>

    <record id="event_view_form_inherit_front" model="ir.ui.view">
        <field name="name">event.view.form.front.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="after">
              <field name="image" widget="image" class="oe_avatar" nolable="1" options="{'size': [100, 100]}"/>
            </div>
        </field>
    </record>

     <record id="ir_action_manage_story" model="ir.actions.act_window">
         <field name="name">Story List</field>
         <field name="res_model">blog.post</field>
         <field name="view_mode">tree,form</field>
         <field name="domain">[('front_type','=','story')]</field>
     </record>

    <menuitem id="manage_story_menu_id"
            name="Manage Story"
            sequence="3"
               groups="intranet_home.group_user_blog_post_ih"
            />

    <menuitem id="list_story_menu_id"
              name="Story List"
              sequence="1"
              parent="manage_story_menu_id"
              action="ir_action_manage_story"/>

