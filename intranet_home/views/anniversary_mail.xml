        <record id="view_vardhman_disfor_group_form" model="ir.ui.view">
             <field name="name">vardhman.disfor.group.form</field>
             <field name="model">vardhman.disfor.group</field>
             <field name="arch" type="xml">
                 <form string="Discussion Forum Group Type">
                     <header>
                         <button name="create_group" string="Create Group" attrs="{'invisible': [('state', '!=', 'draft')]}" type="object"/>
                         <field name="state" widget="statusbar" statusbar_visible="draft,group_created" />

            </header>
                     <sheet>
                         <group>
                             <group>
                                 <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                 <field name="user_ids" required="1" widget="many2many_tags" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                             </group>
                             <group>
                                 <field name="group_id" attrs="{'invisible': [('state', '=', 'draft')],'readonly': [('state', '!=', 'draft')],}"/>
                             </group>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>

