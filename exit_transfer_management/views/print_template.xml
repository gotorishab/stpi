<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="exit_transfer_noc">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <br/>
                            <p>
                                Dear Sir/Madam, <br></br>
                                The <span t-field="o.employee_id.name"/> has been <span t-field="o.exit_type"/> <span t-field="o.name"/> all Dept.'s are requested to provide their NOC.
                            </p>
                        </div>
                        <div>
                            <table class="table table-bordered">
                                <tr>
                                    <th colspan = "1">
                                        No Dues
                                    </th>
                                    <th colspan = "3">
                                        <span t-field="o.dues_finance"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan = "1">
                                        Remarks
                                    </th>
                                    <th colspan = "3">
                                        <span t-field="o.remarks_finance"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan = "1">
                                    </th>
                                    <th colspan = "1">
                                        Name of The Employee
                                    </th>
                                    <th colspan = "2">
                                        <span t-field="o.employee_finance.name"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan = "1">
                                    </th>
                                    <th colspan = "1">
                                        Designation
                                    </th>
                                    <th colspan = "2">
                                        <span t-field="o.employee_finance.job_id.name"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan = "1">
                                    </th>
                                    <th colspan = "1">
                                        Department
                                    </th>
                                    <th colspan = "2">
                                        <t t-if="o.employee_finance">
                                             <span t-field="o.employee_finance.department_id.name"/>
                                        </t>
                                        <t t-else="">
                                            <b>NA</b>
                                        </t>
<!--                                        <span t-field="o.employee_finance.department_id.name"/>-->
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
    id="noc_exit_id"
    string="NOC"
    model="exit.transfer.management"
    report_type="qweb-pdf"
    file="exit_transfer_management.exit_transfer_noc"
    name="exit_transfer_management.exit_transfer_noc"/>
</odoo>