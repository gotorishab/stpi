<odoo>
    <data>
        <record id="exit_transfer_management_sequence" model="ir.sequence">
            <field name="name">Exit Transfer Sequence</field>
            <field name="code">exit.transfer.management</field>
            <field name="padding">3</field>
        </record>
        <record model="ir.module.category" id="module_exit_transfer_category">
            <field name="name">Exit or Transfer</field>
            <field name="description">Exit or Transfer Management</field>
            <field name="sequence">25</field>
        </record>

        <record id="general_exit_transfer" model="res.groups">
            <field name="name">General</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_category"/>
        </record>

        <record id="finance_exit_transfer" model="res.groups">
            <field name="name">Finance</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_category"/>
        </record>

        <record id="finance_exit_technical" model="res.groups">
            <field name="name">Technical</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_category"/>
        </record>

        <record id="finance_exit_reporting_officer" model="res.groups">
            <field name="name">Reporting Officer</field>
            <field name="stpi">1</field>
            <field name="category_id" ref="module_exit_transfer_category"/>
        </record>
    </data>
</odoo>