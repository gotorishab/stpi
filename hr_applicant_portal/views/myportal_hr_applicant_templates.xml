<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="assets_frontend" name="website assets for my module" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
        <link rel="stylesheet" href="/hr_applicant_portal/static/src/scss/website_shiping.scss"/>
         <script type="text/javascript" src="/hr_applicant_portal/static/src/js/employee_move_line.js"></script>
        </xpath>
    </template>
    <template id="header_layout" inherit_id="website.layout" name="Jobs">
        <xpath expr="//header//ul[@id='top_menu']/li" position="before">
            <li class="nav-item dropdown" t-ignore="true">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                    <b>
                        <span>Jobs</span>
                    </b>
                </a>
                <div class="dropdown-menu" role="menu">
                    <a id="o_admission" class="dropdown-item" href="/create/jobs/application" role="menuitem">Apply For Jobs</a>
                </div>
            </li>
        </xpath>
    </template>
    <template id="apply4jobs" name="Jobs">
        <t t-call="website.layout">
            <div class="oe_structure"/>
            <div class="container oe_website_sale s_website_form apply4jobs">
                <form class="mb32 mt32 apply4jobs_form" action="/Apply/jobs" role="form" method="post" data-model_name="hr.applicant" enctype="multipart/form-data">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="row text-center">
                        <div class="col-md-12">
                            <div class="col-md-7 head">
                                <h3 class="title">
                                    Job Application
                                </h3>
                            </div>
                            <div class="col-md-11" t-if="error">
                                <div class="form-group">
                                    <div class="text-danger mt0 mb0 ims_form_error">
                                        <span t-esc="error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 pl0 mb16">
                                <h4 class="title">
                                    <b>Personal details</b>
                                </h4>
                            </div>
                            <div class="oe_box">
                                <div class="row">
                                    <div class="col-md-12 mb-2 text-left">
                                            <span class="text-info">Fields which are defined with * marks indicates mandatory fields to be written</span>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <div class="profile_image">
                                                    <input type="file" id="uploadImage" class="o_forum_file" name="ufile" accept="image/*"/>
                                                    <img src="/hr_applicant_portal/static/src/img/user.png" class="oe_picture img-thumbnail rounded" alt="Contact"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="title">Salutation</label>
                                            <div class="col-md-8 col-sm-12">
                                                <select  class="form-control" name="title">
                                                    <option value="" t-attf-selected="selected">Select...</option>
                                                    <t t-foreach="titles" t-as="title">
                                                        <option  t-att-value="title.get('id')">
                                                           <t t-esc="title.get('name')"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="birth_date">Applicant Name *</label>
                                            <div class="col-md-8 col-sm-12 input-group">
                                                 <input type="text" class="form-control" name="name" placeholder="Applicant Name........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Father's Name
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <input   type="text" class="form-control" name="name" placeholder="Father's Name........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="motheer_name">Mother's Name
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <input   type="text" class="form-control" name="name" placeholder="Mother's Name........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="dob">Date of Birth (DoB)
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <input type="date" class="form-control" name="dob" value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Email
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <input   type="text" class="form-control" name="personal_email" placeholder="Email........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="birth_date">Aadhar Card No *</label>
                                            <div class="col-md-8 col-sm-12 input-group">
                                                 <input   type="text" class="form-control" name="aadhar_no" placeholder="Aadhar Card No........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">PAN Card No
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <input   type="text" class="form-control" name="pan_no" placeholder="PAN Card No........." value=""/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Gender
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <select class="form-control religion_id" name="gende">
                                                    <option value="male">
                                                       Male
                                                    </option>
                                                    <option value="female">
                                                       Female
                                                    </option>
                                                    <option value="transgender">
                                                       Transgender
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Religion
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <select class="form-control religion_id" name="religion_id">
                                                    <option value="" t-attf-selected="selected">Select...</option>
                                                    <t t-foreach="religion_ids" t-as="religion">
                                                        <option t-att-value="religion.id">
                                                           <t t-esc="religion.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Country
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <select class="form-control country_id" name="country_id">
                                                    <option value="" t-attf-selected="selected">Select...</option>
                                                    <t t-foreach="country_ids" t-as="country">
                                                        <option t-att-value="country.id">
                                                           <t t-esc="country.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Blood Group
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <select class="form-control blood_group" name="blood_group">
                                                    <option value="" t-attf-selected="selected">Select...</option>
                                                    <t t-foreach="blood_group" t-as="blood">
                                                        <option t-att-value="blood[0]">
                                                           <t t-esc="blood[1]"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Category
                                            </label>
                                            <div class="col-md-8 col-sm-12">
                                                <select class="form-control category_id" name="category_id">
                                                    <option value="" t-attf-selected="selected">Select...</option>
                                                    <t t-foreach="category_ids" t-as="category_id">
                                                        <option t-att-value="category_id.id"><t t-esc="category_id.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Whether Ex Service Man
                                            </label>
                                            <div class="col-md-2 col-sm-12">
                                                <input  type="checkbox" name="is_out_talent" t-att-checked="'checked' if admission and  admission.is_out_talent else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Are you a Government Employee
                                            </label>
                                            <div class="col-md-2 col-sm-12">
                                                <input  type="checkbox" name="is_out_talent" t-att-checked="'checked' if admission and  admission.is_out_talent else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Physically Handicapped
                                            </label>
                                            <div class="col-md-2 col-sm-12">
                                                <input  type="checkbox" name="is_out_talent" t-att-checked="'checked' if admission and  admission.is_out_talent else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="col-md-12 pl0">
                                        <h4 class="title">
                                            <b>Job Details</b>
                                        </h4>
                                    </div>
                                    <div class="oe_box mt-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Employment Notice Number
                                                    </label>
                                                    <div class="col-md-8 col-sm-12">
                                                        <select class="form-control advertisement_line_id">
                                                            <option value="" t-attf-selected="selected">Select...</option>
                                                            <t t-foreach="advertisement_ids" t-as="advertisement_line_id">
                                                                <option t-att-value="advertisement_line_id.id"><t t-esc="advertisement_line_id.name"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-4 pl0 col-sm-6 o_label" for="business_address">Application for the post of
                                                    </label>
                                                    <div class="col-md-8 col-sm-12">
                                                        <select class="form-control job_id" name="job_id">
                                                            <option value="" t-attf-selected="selected">Select...</option>
                                                            <t t-foreach="job_ids" t-as="job_id">
                                                                <option t-att-value="job_id.id">
                                                                   <t t-esc="job_id.name"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="col-md-12 pl0">
                                        <h4 class="title">
                                            <b>Address Details</b>
                                        </h4>
                                    </div>
                                    <div class="oe_box mt-3">
                                        <table id="previous_academic_info"
                                               class="oe_list_content table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Street</th>
                                                    <th>Street2</th>
                                                    <th>City</th>
                                                    <th>State</th>
                                                    <th>Country</th>
                                                    <th>Zip</th>
                                                    <th>Is correspondence?</th>
                                                    <th class="o_delete_th"/>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="oe_button o_add_an_item_tr">
                                                    <td colspan="7" class="text-left o_add_an_item">
                                                        <a href="#"
                                                           id="add_move_line_ids">Add Item
                                                        </a>
                                                    </td>
                                                </tr>
                                        </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>




                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="col-md-12 pl0">
                                        <h4 class="title">
                                            <b>Employment Details</b>
                                        </h4>
                                    </div>
                                    <div class="oe_box mt-3">
                                        <input type="hidden" id="employee_rec" name="employeement_rec" class="hidden" value="0"/>
                                        <table id="employeement_info"
                                               class="oe_list_content table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>From date</th>
                                                    <th>To date</th>
                                                    <th>Organisation</th>
                                                    <th>Position</th>
                                                    <th>Reference name</th>
                                                    <th>Reference position</th>
                                                    <th>Reference phone</th>
                                                    <th class="o_delete_th"/>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="oe_button o_add_an_employee_tr">
                                                    <td colspan="7" class="text-left o_add_an_item">
                                                        <a
                                                           id="add_employeement_ids">Add Item
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="col-md-12 pl0">
                                        <h4 class="title">
                                            <b>Educational Qualification</b>
                                        </h4>
                                    </div>
                                    <div class="oe_box mt-3">
                                        <input type="hidden" id="education_line_rec" name="education_line_rec" class="hidden" value="0"/>
                                        <table id="education_line_info"
                                               class="oe_list_content table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Type</th>
                                                    <th>Qualification</th>
                                                    <th>Description</th>
                                                    <th>Specialization</th>
                                                    <th>Date Start</th>
                                                    <th>Date Start</th>
                                                    <th class="o_delete_th"/>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="oe_button o_add_education_tr">
                                                    <td colspan="7" class="text-left o_add_an_item">
                                                        <a
                                                           id="education_line_ids">Add Item
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-3">
                                <div class="col-md-12">
                                    <div class="col-md-12 pl0">
                                        <h4 class="title">
                                            <b>Information on Vigilance and Discipline</b>
                                        </h4>
                                    </div>
                                    <div class="oe_box mt-3">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-8 col-sm-6 o_label" for="is_fail">Any Penalty awarded during the last 10 years ?
                                                    </label>
                                                    <div class="col-md-2 col-sm-12">
                                                        <input  type="checkbox" step="any" t-att-checked="'checked' if admission and admission.is_fail else None" name="is_fail" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-8 col-sm-6 o_label" for="is_difficulty_subject">Any action or inquiry is going on as far as candidate's knowledge ?
                                                    </label>
                                                    <div class="col-md-2 col-sm-12">
                                                        <input  type="checkbox"  name="is_difficulty_subject" t-att-checked="'checked' if admission and  admission.is_difficulty_subject else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-8 col-sm-6 o_label" for="is_out_telent">Any criminal/ vigilance case is pending or contemplated ?
                                                    </label>
                                                    <div class="col-md-2 col-sm-12">
                                                        <input  type="checkbox" name="is_out_talent" t-att-checked="'checked' if admission and  admission.is_out_talent else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-md-8 col-sm-6 o_label" for="is_out_telent">Any relative defined in terms of CCS ?
                                                    </label>
                                                    <div class="col-md-2 col-sm-12">
                                                        <input  type="checkbox" name="is_out_talent" t-att-checked="'checked' if admission and  admission.is_out_talent else None" t-att-disabled="admission and admission.state not in ['draft', 'pending', 'initial_acceptance'] or None"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 pt-3">
                            <button type="submit" id="submit_btn" class="btn submit btn-primary btn-md pull-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>
    <template id="thankyou">
    <t t-call="website.layout">
        <div id="wrap">
            <div class="oe_structure">
                <div class="container pt32 pb32">
                    <div class="row pb32 alert alert-info pt32">
                        <div class="col-md-12">
                            <h1>Thank you!</h1>
                        </div>
                        <div class="col-md-12">
                            <h5>
                                Your Application submitted successfully.
                            </h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center mt16 mb16">
                            <a href="/" class="btn btn-primary btn-lg">Continue To Our Website</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    </template>
</odoo>
