<!--              name = "Receipt Type"-->
<!--              action ="vigilance_receipt_type_action"-->
<!--              parent = "vigilance_configuration"-->
<!--      />-->

    <menuitem id = "vigilance_penalty"
              name = "Penalty"
              action ="vigilance_penalty_action"
              parent = "vigilance_configuration"
      />

</odoo>