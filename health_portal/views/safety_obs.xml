<odoo>
    <record id="health_manage_safetyobs_form" model="ir.ui.view">
        <field name="name">health.manage.safetyobs.form</field>
        <field name="model">health.manage.safetyobs</field>
        <field name="arch" type="xml">
            <form string="Safety Observation Card">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Safety Observation Card
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="observer_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="plant" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="department_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="Observed_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <field name="housekeeping"/>
                                <field name="dress"/>
                                <field name="pre"/>
                                <field name="chemical"/>
                                <field name="debris"/>
                                <field name="knife"/>
                                <field name="machine"/>
                            </group>
                            <group>
                                <field name="loto"/>
                                <field name="manual"/>
                                <field name="slip"/>
                                <field name="ergonomic"/>
                                <field name="not_sec"/>
                                <field name="emergency_access"/>
                            </group>
                            <group>
                                <group>
                                    <field name="other_behave"/>
                                    <field name="other_behave_ex"/>
                                    <field name="unsafe_act"/>
                                    <field name="unsafe_act_ex"/>
                                    <field name="potential_hazard"/>
                                    <field name="unsafe_other"/>
                                    <field name="question_sit"/>
                                    <field name="commitment_follow"/>
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_safetyobs_list" model="ir.ui.view">
        <field name="name">health.manage.safetyobs.list</field>
        <field name="model">health.manage.safetyobs</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="safetyobs information" create="0">
                <field name="observer_name"/>
                <field name="plant"/>
                <field name="date"/>
                <field name="department_id"/>
                <field name="Observed_name"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_safetyobs_list" model="ir.actions.act_window">
        <field name="name">Safety Observation Card</field>
        <field name="res_model">health.manage.safetyobs</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_safetyobs_create" model="ir.actions.act_window">
        <field name="name">Safety Observation Card</field>
        <field name="res_model">health.manage.safetyobs</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_safetyobs_master"
            name="Manage Safety Observation Card"
            sequence="10"
            />


    <menuitem id="menu_health_manage_safetyobs_list"
            name="Safety Observation Card List"
            sequence="3"
            parent="menu_health_manage_safetyobs_master"
            action="ir_action_health_manage_safetyobs_list"
    />

    <menuitem id="menu_health_manage_safetyobs_create"
            name="Safety Observation Card"
            sequence="1"
            parent="menu_health_manage_safetyobs_master"
            action="ir_action_health_manage_safetyobs_create"
    />




    
</odoo>