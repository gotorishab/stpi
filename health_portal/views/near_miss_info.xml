<odoo>
    <record id="health_manage_nearmiss_form" model="ir.ui.view">
        <field name="name">health.manage.nearmiss.form</field>
        <field name="model">health.manage.nearmiss</field>
        <field name="arch" type="xml">
            <form string="Near Miss Information">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Near Miss Information
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="from_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="to_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="area_in_charge" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="near_miss_location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="near_miss_dt" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="description" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="reported_by" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="employee_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="department_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_nearmiss_list" model="ir.ui.view">
        <field name="name">health.manage.nearmiss.list</field>
        <field name="model">health.manage.nearmiss</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="nearmiss information" create="0">
                <field name="unit_id"/>
                <field name="location"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="area_in_charge"/>
                <field name="near_miss_location"/>
                <field name="near_miss_dt"/>
                <field name="description"/>
                <field name="reported_by"/>
                <field name="employee_id"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_nearmiss_list" model="ir.actions.act_window">
        <field name="name">Near Miss Information</field>
        <field name="res_model">health.manage.nearmiss</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_nearmiss_create" model="ir.actions.act_window">
        <field name="name">Near Miss Information</field>
        <field name="res_model">health.manage.nearmiss</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_nearmiss_master"
            name="Manage Near Miss Info"
            sequence="8"
            />


    <menuitem id="menu_health_manage_nearmiss_list"
            name="Near Miss Information List"
            sequence="3"
            parent="menu_health_manage_nearmiss_master"
            action="ir_action_health_manage_nearmiss_list"
    />

    <menuitem id="menu_health_manage_nearmiss_create"
            name="Near Miss Information"
            sequence="1"
            parent="menu_health_manage_nearmiss_master"
            action="ir_action_health_manage_nearmiss_create"
    />




    
</odoo>