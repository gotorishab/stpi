<odoo>
    <record id="health_manage_fireincident_form" model="ir.ui.view">
        <field name="name">health.manage.fireincident.form</field>
        <field name="model">health.manage.fireincident</field>
        <field name="arch" type="xml">
            <form string="Fire Incident Information">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="health_portal.group_approver_health_fire_incident"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Fire Incident Entry Form
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="hall_no" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location_fire_incident" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="loss_nloss" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="details" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="route_cause" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="reason_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="action_taken" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Root Cause Why-why" name="cause_why">
                            <field name="route_cause_why_ids">
                                <tree editable="bottom">
                                    <field name="health_fireincident_id" invisible="1"/>
                                    <field name="why" required="1"/>
                                    <field name="Answer" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_fireincident_list" model="ir.ui.view">
        <field name="name">health.manage.fireincident.list</field>
        <field name="model">health.manage.fireincident</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Fire Incident information" create="0">
                <field name="unit_id" required="1"/>
                <field name="hall_no" required="1"/>
                <field name="location" required="1"/>
                <field name="date" required="1"/>
                <field name="location_fire_incident" required="1"/>
                <field name="loss_nloss" required="1"/>
                <field name="details" required="1"/>
                <field name="route_cause" required="1"/>
                <field name="reason_id" required="1"/>
                <field name="action_taken" required="1"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_fireincident_list" model="ir.actions.act_window">
        <field name="name">Fire Incident information</field>
        <field name="res_model">health.manage.fireincident</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_fireincident_create" model="ir.actions.act_window">
        <field name="name">Health Manage Fire Incidents</field>
        <field name="res_model">health.manage.fireincident</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_fireincident_master"
            name="Manage Fire Incidents"
            sequence="3"
               groups="health_portal.group_manager_health_fire_incident"
            />


    <menuitem id="menu_health_manage_fireincident_list"
            name="Fire Incident List"
            sequence="2"
            parent="menu_health_manage_fireincident_master"
            action="ir_action_health_manage_fireincident_list"
    />

    <menuitem id="menu_health_manage_fireincident_create"
            name="Fire Incident Information"
            sequence="1"
            parent="menu_health_manage_fireincident_master"
            action="ir_action_health_manage_fireincident_create"
    />




        <record id="health_manage_fireincident_pivot" model="ir.ui.view">
            <field name="name">health.manage.fireincident.pivot</field>
            <field name="model">health.manage.fireincident</field>
            <field name="arch" type="xml">
                <pivot string="Monthly Incident Report" disable_linking="True">
                    <field name="unit_id" type="row"/>
                    <field name="date" type="col"/>
                </pivot>
            </field>
        </record>
        <record id="health_manage_fireincident_graph" model="ir.ui.view">
       <field name="name">health.manage.fireincident.graph</field>
       <field name="model">health.manage.fireincident</field>
       <field name="arch" type="xml">
           <graph string="Monthly Incident Report">
               <field name="unit_id"/>
               <field name="date"/>
           </graph>
       </field>
    </record>

        <record id="ir_action_health_manage_monthly_fireincident_pivot" model="ir.actions.act_window">
        <field name="name">Monthly Incident Report</field>
        <field name="res_model">health.manage.fireincident</field>
        <field name="view_mode">pivot,graph</field>
    </record>


    <menuitem id="menu_health_manage_monthlyfireincident_report"
            name="Monthly Incident Report"
            sequence="1"
            parent="menu_health_reports_master"
            action="ir_action_health_manage_monthly_fireincident_pivot"
    />




    
</odoo>