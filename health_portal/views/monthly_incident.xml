<odoo>
    <record id="health_manage_monthlyincident_form" model="ir.ui.view">
        <field name="name">health.manage.monthlyincident.form</field>
        <field name="model">health.manage.monthlyincident</field>
        <field name="arch" type="xml">
            <form string="Monthly Incident Report">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="health_portal.group_approver_health_monthly_incident"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Monthly Incident Report
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="safety_coordinator" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Incident Details" name="incident_details">
                            <field name="incident_detail_ids">
                                <tree editable="bottom">
                                    <field name="health_incident_id" invisible="1"/>
                                    <field name="department_id" required="1"/>
                                    <field name="no_employees_ytd" required="1"/>
                                    <field name="man_hrs_worked_ytd" required="1"/>
                                    <field name="man_hrs_worked_month" required="1"/>
                                    <field name="min_accident_ytd" required="1"/>
                                    <field name="min_accident_month" required="1"/>
                                    <field name="maj_accident_ytd" required="1"/>
                                    <field name="maj_accident_month" required="1"/>
                                    <field name="man_days_lost_ytd" required="1"/>
                                    <field name="man_days_lost_month" required="1"/>
                                    <field name="total_accident_ytd" required="1"/>
                                    <field name="total_accident_month" required="1"/>
<!--                                    <field name="frequency_rate_ytd" required="1"/>-->
<!--                                    <field name="frequency_rate_month" required="1"/>-->
<!--                                    <field name="severity_rate_ytd" required="1"/>-->
<!--                                    <field name="severity_rate_month" required="1"/>-->
<!--                                    <field name="incident_rate_ytd" required="1"/>-->
<!--                                    <field name="incident_rate_month" required="1"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_monthlyincident_list" model="ir.ui.view">
        <field name="name">health.manage.monthlyincident.list</field>
        <field name="model">health.manage.monthlyincident</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Incident Information List" create="0">
                <field name="unit_id"/>
                <field name="location"/>
                <field name="safety_coordinator"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_monthlyincident_list" model="ir.actions.act_window">
        <field name="name">Incident Information List</field>
        <field name="res_model">health.manage.monthlyincident</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_monthlyincident_create" model="ir.actions.act_window">
        <field name="name">Health Manage Fire Incidents</field>
        <field name="res_model">health.manage.monthlyincident</field>
        <field name="view_mode">form</field>
    </record>


    <menuitem id="menu_health_manage_monthlyincident_master"
            name="Manage Monthly Incident"
            sequence="5"
               groups="health_portal.group_manager_health_monthly_incident"
            />
    <menuitem id="menu_health_manage_monthlyincident_list"
            name="Incident List"
            sequence="2"
            parent="menu_health_manage_monthlyincident_master"
            action="ir_action_health_manage_monthlyincident_list"
    />

    <menuitem id="menu_health_manage_monthlyincident_create"
            name="Incident Information List"
            sequence="1"
            parent="menu_health_manage_monthlyincident_master"
            action="ir_action_health_manage_monthlyincident_create"
    />




    
</odoo>