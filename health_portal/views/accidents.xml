<odoo>
    <record id="health_manage_accidents_form" model="ir.ui.view">
        <field name="name">health.manage.accidents.form</field>
        <field name="model">health.manage.accidents</field>
        <field name="arch" type="xml">
            <form string="Accident Information">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft" groups="health_portal.group_unit_level_user_health"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="health_portal.group_health_and_safety_admin_health"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft,submitted"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Accident Information
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="affected_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="maj_min" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="details" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="route_cause" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="reason_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="implement_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="action_taken" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Root Cause Why-why" name="cause_why">
                            <field name="route_cause_why_ids">
                                <tree editable="bottom">
                                    <field name="health_accident_id" invisible="1"/>
                                    <field name="why" required="1"/>
                                    <field name="Answer" required="1"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_accidents_list" model="ir.ui.view">
        <field name="name">health.manage.accidents.list</field>
        <field name="model">health.manage.accidents</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Accident information" create="0">
                <field name="unit_id" required="1"/>
                <field name="date" required="1"/>
                <field name="affected_name" required="1"/>
                <field name="location" required="1"/>
                <field name="maj_min" required="1"/>
                <field name="details" required="1"/>
                <field name="route_cause" required="1"/>
                <field name="reason_id" required="1"/>
                <field name="implement_date" required="1"/>
                <field name="action_taken" required="1"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_accidents_list" model="ir.actions.act_window">
        <field name="name">Accident information</field>
        <field name="res_model">health.manage.accidents</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_accidents_create" model="ir.actions.act_window">
        <field name="name">Health Manage Accidents</field>
        <field name="res_model">health.manage.accidents</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_accidents_master"
            name="Manage Accidents"
            sequence="2"
            />


    <menuitem id="menu_health_manage_accidents_list"
            name="Accident List"
            sequence="2"
            parent="menu_health_manage_accidents_master"
              action="ir_action_health_manage_accidents_list"
    />

    <menuitem id="menu_health_manage_accidents_create"
            name="Accident Information"
            sequence="1"
            parent="menu_health_manage_accidents_master"
            action="ir_action_health_manage_accidents_create"
    />


        <record id="health_manage_accidents_pivot" model="ir.ui.view">
            <field name="name">health.manage.accidents.pivot</field>
            <field name="model">health.manage.accidents</field>
            <field name="arch" type="xml">
                <pivot string="Monthly Accident Report" disable_linking="True">
                    <field name="unit_id" type="row"/>
                    <field name="date" type="col"/>
                </pivot>
            </field>
        </record>
        <record id="health_manage_accidents_graph" model="ir.ui.view">
       <field name="name">health.manage.accidents.graph</field>
       <field name="model">health.manage.accidents</field>
       <field name="arch" type="xml">
           <graph string="Monthly Accident Report">
               <field name="unit_id"/>
               <field name="date"/>
           </graph>
       </field>
    </record>

        <record id="ir_action_health_manage_accidents_pivot" model="ir.actions.act_window">
        <field name="name">Monthly Accident Report</field>
        <field name="res_model">health.manage.accidents</field>
        <field name="view_mode">pivot,graph</field>
    </record>


    <menuitem id="menu_health_reports_master"
            name="Reports"
            sequence="15"
            />
    <menuitem id="menu_health_manage_monthlyaccident_report"
            name="Monthly Accident Report"
            sequence="1"
            parent="menu_health_reports_master"
            action="ir_action_health_manage_accidents_pivot"
    />

    
</odoo>