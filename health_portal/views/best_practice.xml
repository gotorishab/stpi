<odoo>
    <record id="health_manage_bestpractice_form" model="ir.ui.view">
        <field name="name">health.manage.bestpractice.form</field>
        <field name="model">health.manage.bestpractice</field>
        <field name="arch" type="xml">
            <form string="bestpractice Information">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Best Practice
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="location" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="month" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="year" readonly="1"/>
                            <field name="best_practice" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="old_practice" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <field name="details" placeholder="Best Practice Details..." attrs="{'readonly':[('state','!=','draft')]}"/>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_bestpractice_list" model="ir.ui.view">
        <field name="name">health.manage.bestpractice.list</field>
        <field name="model">health.manage.bestpractice</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="bestpractice information" create="0">
                <field name="unit_id"/>
                <field name="location"/>
                <field name="month"/>
                <field name="year"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_bestpractice_list" model="ir.actions.act_window">
        <field name="name">Best Practice information</field>
        <field name="res_model">health.manage.bestpractice</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_bestpractice_create" model="ir.actions.act_window">
        <field name="name">Best Practice</field>
        <field name="res_model">health.manage.bestpractice</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_bestpractice_master"
            name="Manage Best Practice"
            sequence="7"
            />


    <menuitem id="menu_health_manage_bestpractice_list"
            name="Best Practice List"
            sequence="3"
            parent="menu_health_manage_bestpractice_master"
            action="ir_action_health_manage_bestpractice_list"
    />

    <menuitem id="menu_health_manage_bestpractice_create"
            name="Best Practices"
            sequence="1"
            parent="menu_health_manage_bestpractice_master"
            action="ir_action_health_manage_bestpractice_create"
    />




    
</odoo>