<odoo>
    <record id="health_manage_whyanalysis_form" model="ir.ui.view">
        <field name="name">health.manage.whyanalysis.form</field>
        <field name="model">health.manage.whyanalysis</field>
        <field name="arch" type="xml">
            <form string="Why-Why Analysis">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="health_portal.group_approver_health_why_why_ana"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draf,submitted,approvedt" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Why-Why Analysis
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="safety_unit_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="recv" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="accident_no" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="worker_no" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="debt_code" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="doj" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="supervisor_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="shift_incharge" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="eitness_name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="ppe" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="ppe_y_ex" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="ppe_n_rs" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="analysis_done_by" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="description_accident" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="root_cause" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="counter_measure" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="concern_area_head" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="safety_dept" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="unit_head" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="WHY WHY ANALYSIS and ROOT CAUSE IDENTIFICATION">
                            <field name="analysis_why_ids">
                                <tree editable="bottom">
                                    <field name="health_whyanalysis_id" invisible="1"/>
                                    <field name="why" required="1"/>
                                    <field name="answer" required="1"/>
                                    <field name="action" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_whyanalysis_list" model="ir.ui.view">
        <field name="name">health.manage.whyanalysis.list</field>
        <field name="model">health.manage.whyanalysis</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="whyanalysis information" create="0">
                <field name="safety_unit_name"/>
                <field name="recv"/>
                <field name="date"/>
                <field name="accident_no"/>

                <field name="worker_no"/>
                <field name="debt_code"/>
                <field name="doj"/>
                <field name="supervisor_name"/>

                <field name="shift_incharge"/>
                <field name="eitness_name"/>
                <field name="ppe"/>
                <field name="ppe_y_ex"/>
                <field name="ppe_n_rs"/>

                <field name="analysis_done_by"/>
                <field name="description_accident"/>
                <field name="root_cause"/>
                <field name="counter_measure"/>

                <field name="concern_area_head"/>
                <field name="safety_dept"/>
                <field name="unit_head"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_whyanalysis_list" model="ir.actions.act_window">
        <field name="name">Why-Why Analysis</field>
        <field name="res_model">health.manage.whyanalysis</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_whyanalysis_create" model="ir.actions.act_window">
        <field name="name">Why-Why Analysis</field>
        <field name="res_model">health.manage.whyanalysis</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_whyanalysis_master"
            name="Manage Why-Why Analysis"
            sequence="12"
               groups="health_portal.group_manager_health_why_why_ana"
            />


    <menuitem id="menu_health_manage_whyanalysis_list"
            name="Why-Why Analysis List"
            sequence="3"
            parent="menu_health_manage_whyanalysis_master"
            action="ir_action_health_manage_whyanalysis_list"
    />

    <menuitem id="menu_health_manage_whyanalysis_create"
            name="Why-Why Analysis"
            sequence="1"
            parent="menu_health_manage_whyanalysis_master"
            action="ir_action_health_manage_whyanalysis_create"
    />




    
</odoo>