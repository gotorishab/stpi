<odoo>
    <record id="health_manage_audit_form" model="ir.ui.view">
        <field name="name">health.manage.audit.form</field>
        <field name="model">health.manage.audit</field>
        <field name="arch" type="xml">
            <form string="Audit Information">
                <header>
                    <button name="button_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="button_approved" string="Approve" class="oe_highlight" type="object" states="submitted" groups="health_portal.group_approver_health_audit"/>
                    <button name="button_cancel" string="Cancel" type="object" states="draft"/>
                     <button name="button_reset_to_draft" string="Reset to draft" type="object" states="submitted"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted" />
                </header>
                <sheet>
                    <h1 class="d-flex">
                        Perform Audit
                    </h1>
                    <hr/>
                    <br/>
                    <group>
                        <group>
                            <field name="audit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="unit_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="team" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="coordinators" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="total_mark" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="mark_obtained" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="percentage" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="no_observation" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="month" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="next_due_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observations" name="observations_ids">
                            <field name="observation_ids">
                                <tree editable="bottom">
                                    <field name="health_audit_id" invisible="1"/>
                                    <field name="image" required="1"/>
                                    <field name="observation" required="1"/>
                                    <field name="recomendation" required="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Checklist" name="checklists_ids">
                            <field name="audit_checklist_ids">
                                <tree editable="bottom">
                                    <field name="health_audit_id" invisible="1"/>
                                    <field name="checklist_item" readonly="1"/>
                                    <field name="sub_checklist_item" readonly="1"/>
                                    <field name="maximum_score" required="1"/>
                                    <field name="obtained_score" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>
    <record id="health_manage_audit_list" model="ir.ui.view">
        <field name="name">health.manage.audit.list</field>
        <field name="model">health.manage.audit</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Audit information" create="0">
                <field name="audit_id"/>
                <field name="unit_id"/>
                <field name="date"/>
                <field name="team"/>
                <field name="coordinators"/>
                <field name="total_mark"/>
                <field name="mark_obtained"/>
                <field name="percentage"/>
                <field name="no_observation"/>
                <field name="month"/>
                <field name="next_due_date"/>
            </tree>
        </field>
    </record>
    <record id="ir_action_health_manage_audit_list" model="ir.actions.act_window">
        <field name="name">Audit information</field>
        <field name="res_model">health.manage.audit</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ir_action_health_manage_audit_create" model="ir.actions.act_window">
        <field name="name">Audit Manage audit</field>
        <field name="res_model">health.manage.audit</field>
        <field name="view_mode">form</field>
    </record>
    <menuitem id="menu_health_manage_audit_master"
            name="Manage Audit"
            sequence="4"
               groups="health_portal.group_manager_health_audit"
            />


    <menuitem id="menu_health_manage_audit_list"
            name="Audit List"
            sequence="3"
            parent="menu_health_manage_audit_master"
            action="ir_action_health_manage_audit_list"
    />

    <menuitem id="menu_health_manage_audit_create"
            name="Audit Information"
            sequence="1"
            parent="menu_health_manage_audit_master"
            action="ir_action_health_manage_audit_create"
    />




    
</odoo>