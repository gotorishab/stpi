<odoo>
    <data>


      <record id="issuestock_action_confirm_view" model="ir.ui.view">
            <field name="name">issuestock.approve.form</field>
            <field name="model">issuestock.approve</field>
            <field name="arch" type="xml">
                <form string="Approve/Reject?">
                    <p class="oe_grey">
                        <ul>
                            <li>Approve Button will approve all requests</li>
                            <li>Reject Button wil reject all requests</li>
                        </ul>
                    </p>
                    <footer>
                        <button string="Approve" name="issuestock_approve_action_button" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Reject" name="issuestock_reject_action_button" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



    <act_window id="action_issuestock_action_confirm"
            multi="True"
            key2="client_action_multi" name="Approve/Reject"
                res_model="issuestock.approve" src_model="issue.request"
            view_mode="form" target="new" view_type="form"/>
    </data>
</odoo>
