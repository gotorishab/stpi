<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id = "appraisal_form1_agreed_report">
        <t t-call = "web.html_container">
            <t t-foreach="docs" t-as="o">
               <t t-call="web.external_layout">
                   <div class="page">
                       <div>
                           <br/>
