<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_appraisal_form_inherit">
            <field name="name">hr.employee.appraisal</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//page[@name='public']/group[1]" position="inside">
                    <group name="appraisal" string="Appraisal Details">
                        <field name="appraisal_reporting_officer"/>
                        <field name="appraisal_reviewing_officer"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

