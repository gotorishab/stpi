<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id ="annex_report">
        <t t-call = "web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <br/>
                            <p>
                                <h2>
                                Certificate For Disclosure of Annual Performance Appraisal Report<br></br>
                                </h2>
                            </p>
                        </div>
                        <br/>
                        <div>
                            <table class="table table-bordered">
                                <tr>
                                   <th colspan = "1">
                                       1.) Name of the Officer Reported upon
                                   </th>

                                   <th colspan = "2">
                                       <span t-field="o.employee_id"/>
                                    </th>
                               </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       2.) Year/Period of Report
                                   </th>
                                   <th colspan="2">
                                       <span t-field="o.abap_period"/>
                                   </th>
                               </tr>
                            </table>

                            <table class ="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       3.) Date of Disclosure of the APAR to the officer reported upon
                                   </th>
                                   <th colspan="2">

                                   </th>
                               </tr>
                            </table>

                            <table class ="table table-bordered">
                                <tr>
                                   <th colspan="1">
                                       4.) Whether representation on the APAR received from the officer reported upon<br/> if reply to (4) above is YES, then:
                                   </th>
                                   <th colspan="1">
                                       YES
                                   </th>
                                    <th colspan="1">
                                        NO
                                    </th>
                               </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        5.) Date of receipt of the representation
                                    </th>
                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        6.) Date of disclosure to the officer reported upon the decision on his/her representation after its consideration by the Competent Authority
                                    </th>

                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <th colspan="1">
                                        7.) Remarks
                                    </th>

                                    <th colspan="1">

                                    </th>
                                </tr>
                            </table>
                            <br/>
                            <br/>


                            <style>
                               p {text-align: right;}
                           </style>
                               <p><b>Name of the Officer Reported upon</b></p>
                                <div style="width: 200px;
                                height: 50px;
                                border: 1px solid black;
                                box-sizing: border-box;
                                float:right;">
                                </div>

                            <table class="table table-bordered">
                                <tr>

                                </tr>
                            </table>

                            <style>
                                   p {text-align: right;}
                               </style>
                                   <p><b>Signature:</b></p>
                                   <div style="width: 125px;
                                    height: 40px;
                                    border: 1px solid black;
                                    box-sizing: border-box;
                                    float:right;">
                                   </div>

                            <table class="table table-bordered">
                                <tr>

                                </tr>
                            </table>
                            <style>
                                   p {text-align: right;}
                               </style>
                                   <p><b>Date:</b></p>
                                    <div style="width: 100px;
                                    height: 35px;
                                    border: 1px solid black;
                                    box-sizing: border-box;
                                    float:right;">
                                   </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <report
    id ="annex_id"
    string="Appraisal Report 2"
    model="appraisal.main"
    report_type="qweb-pdf"
    file="appraisal_stpi.annex_report"
    name="appraisal_stpi.annex_report"/>
</odoo>